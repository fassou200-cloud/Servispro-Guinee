  "universal_guidelines": {
    "anti_ai_rules": [
      "DO NOT use generic 'SaaS Blue' gradients.",
      "DO NOT center text by default. Left-align for strength.",
      "DO NOT use 'Inter' for headings. Use 'Manrope'.",
      "DO NOT make everything a card. Use whitespace to separate content."
    ],
    "accessibility": {
      "contrast": "Ensure 4.5:1 contrast ratio for text.",
      "focus": "Visible focus rings are mandatory.",
      "motion": "Respect prefers-reduced-motion."
    },
    "testing": {
      "attribute": "data-testid",
      "format": "kebab-case",
      "example": "login-submit-button"
    }
  },
  "instructions_to_main_agent": [
    "1. Update tailwind.config.js with the colors and fonts defined above.",
    "2. Install the fonts via Google Fonts in index.html or CSS import.",
    "3. Create the 'Control Room' layout for the dashboard.",
    "4. Use the provided image URLs for the respective service categories.",
    "5. Implement the 'Swiss Utility' aesthetic: high contrast, bold type, strict grid."
  ]
}